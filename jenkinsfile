pipeline {
    agent any
    stages{
        stage('checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/akashsakore/test.git'
            }
        }
        stage('build') {
            steps{
                dir('simple-java-maven-app')
                sh 'mvn clean package'
            }
        }
        stage('test') {
            steps{
                sh 'mvn test'
            }
        }
    }
}